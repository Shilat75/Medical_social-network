<main>
  <div class="bg-img">
    <nav>
      <div class="logo">
        <span>
          <h1>Health&nbsp;Connect</h1>
        </span>

      </div>
    </nav>
    <hr />

    <div class="loginbox">
      <div class="font">
        <h4>Sign-Up</h4>
        <form id="login-form" action="/register" method="POST">
          <div class="row mb-3">
            <div class="col-1">*</div>
            <div class="col-10">
              <input
                type="text"
                id="username-input"
                name="username"
                placeholder="Enter Username"
                required
                class="form-control"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-1">*</div>
            <div class="col-10">
              <input
                type="text"
                id="email-input"
                name="email"
                placeholder="Enter email"
                required
                class="form-control"
              />
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-1">*</div>
            <div class="col-10">
              <input
                type="text"
                id="password-input"
                name="password"
                placeholder="Enter password"
                required
                class="form-control"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-1"></div>
            <div class="col-10">
              <input
                type="text"
                id="name-input"
                name="name"
                placeholder="Enter name"
                class="form-control"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-1"></div>
            <div class="col-10">
              <input
                type="text"
                id="address-input"
                name="address"
                placeholder="Enter address"
                class="form-control"
              />
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-1"></div>
            <div class="col-10">
              <input
                type="text"
                id="phone-input"
                name="phone"
                placeholder="Mobile Number"
                class="form-control"
              />
            </div>
          </div>
          <span id="error-message" class="error-message"></span>
          <button type="submit" class="mb-5 mt-3">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</main>
