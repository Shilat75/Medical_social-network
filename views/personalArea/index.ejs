<div class="container">
  <%- include('../profile/userDetails') %> <%- include('./edit') %>
  <br />
  <%- include('../layout/nav') %>
  <br />
  <br />
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a
        class="nav-link active"
        id="like-tab"
        data-bs-toggle="tab"
        data-bs-target="#like"
        type="button"
        role="tab"
        aria-controls="like"
        aria-selected="true"
        >Like
        <span class="badge bg-success text-dark"> <%= likes.length %> </span>
      </a>
    </li>
    <li class="nav-item" role="presentation">
      <a
        class="nav-link"
        id="saved-tab"
        data-bs-toggle="tab"
        data-bs-target="#saved"
        type="button"
        role="tab"
        aria-controls="saved"
        aria-selected="false"
        >Saved
        <span class="badge bg-success text-dark"> <%= saves.length %> </span></a
      >
    </li>
    <li class="nav-item" role="presentation">
      <a
        class="nav-link"
        id="followers-tab"
        data-bs-toggle="tab"
        data-bs-target="#followers"
        type="button"
        role="tab"
        aria-controls="followers"
        aria-selected="false"
        >Followers
        <span class="badge bg-success text-dark">
          <%= followers.length %>
        </span></a
      >
    </li>
    <li class="nav-item" role="presentation">
      <a
        class="nav-link"
        id="following-tab"
        data-bs-toggle="tab"
        data-bs-target="#following"
        type="button"
        role="tab"
        aria-controls="following"
        aria-selected="false"
        >Following
        <span class="badge bg-success text-dark">
          <%= follows.length %>
        </span></a
      >
    </li>
  </ul>

  <div class="row tab-content w-100" id="myTabContent">
    <div class="tab-pane fade show active" id="like" role="tabpanel">
      <%- include('./like', {items:likes}) %>
    </div>
    <div class="tab-pane fade" id="saved" role="tabpanel">
      <%- include('./like', {items:saves}) %>
    </div>
    <div class="tab-pane fade" id="followers" role="tabpanel">
      <%- include('./follow', {title : "Followers" }) %>
    </div>
    <div class="tab-pane fade" id="following" role="tabpanel">
      <%- include('./following', {title : "Followers" }) %>
    </div>
  </div>
</div>
